#include <stdio.h>
#include<conio.h>
#include<stdlib.h>
#include<string.h>
#include<ctype.h>
int main(){
int d;
scanf("%d",d);
char a[50][100];
int i,j,k=0;
for (i=0;i<d;i++){
	for(j=0;j<50;j++){
		gets(a);
		while(a[0][i]==' '){
		strcpy(&a[0][i],&a[1][i]);
	}
	for(j=0;j<50;j++){
		if(a[j][i]==' '){
			if(a[j+1][i]==' '){
			strcpy(&a[j][i],&a[j+1][i]);
			continue;
		}
		else{
			printf("%c",toupper(a[j][i]));
			k=k+1;
		}
	}
		else{
			printf("%c",toupper(a[j][i]));
			k=k+1;
		}
	}
	}
	printf("%d",k);
}

return 0;
}
